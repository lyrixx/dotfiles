#global
altscreen on
autodetach on
startup_message off

# Change default scrollback value for new windows
defscrollback 20000

# Caption
caption always "%{Yb} %02d-%02m-%Y %0c %{k}|%{C} %H %{k}|%{G} %l %{k}|%{W} %-Lw%{R}%n %t%{W}%+Lw"

# Term : 
screen -t ROOT          0 su
screen -t TOP           1 htop
screen -t bash          2 
